{%- from "./component.njk" import component -%}

<section id="speakers">
    <div class="overlay"></div>
    <div class="gradient-overlay"></div>
    <div class="row section-intro animate-this">
        <div class="col-twelve">
        <h3 class="animate-this">Speakers</h3>
        <p>Please help us thank our amazing speakers!</p>
        {% if (features.speakersCallOpen) %}
        <p><a href="/{{'#submit' | url | urlspa }}">Submit your session now!</a></p>
        {% endif %}
        <div class="cards-speakers">
            {% for item in collections.speakers | sortByOrder %}
                <div class="col-md-4"><div class="card card-speaker"><div class="card-body">
                    <a href="{{ item.url }}">
                        <img src="{{item.data.img}}" alt="{{item.data.title}}" width="150"/>
                        <h6>{{item.data.title}}</h6>
                    </a>
                </div></div></div>
            {% endfor %}
        </div>
    </div>
</section>
