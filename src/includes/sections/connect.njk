{%- from "system/component.njk" import component -%}
<section id="connect">
    <div class="overlay"></div>
	<div class="row narrow section-intro animate-this">
		<div class="col-twelve">
			<h3>Connect</h3>
			<h1>Get In Touch.</h1>
			<p class="lead">Don't be strangers. Connect with us and join your community.</p>
		</div>
	</div>
	<div class="connect-social-list row narrow connect-content with-bottom-sep animate-this">
		{# {{ component('socialLinks', {
			primary: 'list-links',
			secondary: 'table-item',
			data: collections.links
		}) }} #}

		{% for item in collections.links %}
			<a href="{{item.data.url}}" target="_blank"><i class="{{item.data.icon}}"></i></a>
		{% endfor %}
    </div>
</section>
